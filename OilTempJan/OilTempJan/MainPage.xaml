<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OilTempJan.MainPage"
             Loaded="OnContentLoaded" >
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
                x:Name="SettingsBtn"
                Text="Settings" 
                SemanticProperties.Hint="Settings"
                Clicked="OnSettingsClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ShowOiltempBtn"
                Text="Show Oiltemp" 
                SemanticProperties.Hint="Show Oiltemp"
                Clicked="ShowOiltempBtnClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
